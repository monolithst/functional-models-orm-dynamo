{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2021", "dom", "es2015"],
    "declaration": true,
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
